for circle
1.
r=int(input("enter the radius of a circle:"))
pi=3.14
area=pi*r*r
perimeter=2*pi*r
print("area:",area ,"perimeter:",perimeter)

for Ractangle
2.
l=int(input("enter the lenght:"))
b=int(input("enter the breadth:"))
area=l*b
perimeter=2*(l+b)
print("area:",area ,"perimeter:",perimeter)

for square
s=int(input("enter the side:"))
area=s*s
perimeter=4*s
print("area:",area ,"perimeter:",perimeter)
